[MASTER]
# Ignore patterns
ignore-patterns=^\.#

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring (data models are self-documenting)
    C0116,  # missing-function-docstring
    C0104,  # disallowed-name (business terms: 'bar', 'quote', 'trade' are domain essentials)
    R0903,  # too-few-public-methods (domain models intentionally data-only)
    R0913,  # too-many-arguments
    R0801,  # duplicate-code (common __all__ patterns across response models)
    C0415,  # import-outside-toplevel (lazy imports in conversion functions)

[FORMAT]
max-line-length=100

[DESIGN]
max-attributes=10

[VARIABLES]
# Minimum confidence required to accept a message as valid inference for inference failures
min-similarity-lines=4
